doctype html
html(lang="en")
    head
        title Contact Us
        meta(charset='UTF-8')
        link(rel='stylesheet' href='/resources/css/main.css')
        script(src='/resources/js/main.js')
        script(src='/resources/js/contact.js')
    body 
        include navbar
        h1 Contact Us
        div.form
            form(action='/contact' method='post')
                label(for='name') Name:
                input#name(type='text' name='name' size='20' maxlength='25')
                br
                label(for='email') Email:
                input#email(type='email' name='email' size='20' required='')
                br
                label(for='date') Schedule a tour:
                input#date(type='date' name='date' required='')
                br
                label(for='tour') What kind of tour?
                select#tour(name='tour')
                    option(value='bus') Bus Tour
                    option(value='walk') Walking Tour
                    option(value='bike') Bike Tour
                br
                label(for='residency') Are you a resident of Minnesota?
                input#residency(type='checkbox' name='resident')
                br
                p#calc 15.5$
                label(for='submit') Submit:
                input#submit(type='submit')
